7.1 
class Mitarbeiter{
private:
    int persNr;
    string name;
    char geschlecht;

    Termin *termine[]; 
public:
    ~Mitarbeiter(){
        cout << "Im Destruktor" << endl;
        delete [] termine;
    };

    friend ostream& operator<<(ostream &aus, const Mitarbeiter &m){
        cout << name <<endl;
    };
}

